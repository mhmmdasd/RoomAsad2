<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PenjualanAdapter">



        <TextView
            android:id="@+id/TNama"
            android:layout_width="288dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:text="TeksView"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageEdit"
            android:layout_width="34dp"
            android:layout_height="41dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/TNama"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.861"
            app:layout_constraintStart_toEndOf="@+id/TNama"
            app:layout_constraintTop_toTopOf="@+id/TNama"
            app:layout_constraintVertical_bias="0.571"
            app:srcCompat="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/imageDelete"
            android:layout_width="34dp"
            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageEdit"
            app:layout_constraintStart_toEndOf="@+id/imageEdit"
            app:layout_constraintTop_toTopOf="@+id/imageEdit"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_delete" />



</androidx.constraintlayout.widget.ConstraintLayout>